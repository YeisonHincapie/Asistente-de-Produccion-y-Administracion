<%- include("../elements/head_html") -%>

    <body>

        <% if(usuarios){ %>
            <div class="d-flex mx-auto justify-content-center ">
                <div class="dialog col-lg-4 col-md-4 " role="document">
                    <div class="py-1 container-fluid  mx-auto">
                        <div class="card mx-auto">
                            <div class="modal-header">
                                <h5 class="modal-title mx-auto" id="login">Editar Datos del Usuario</h5>
                                <a href="/usuarios_sistema" type="button" class="close">
                                    <span aria-hidden="true">&times;</span>
                                </a>
                            </div>

                            <div class="modal-body" style="background-color:rgb(160, 204, 253);">
                                <form action="enviar/<%= usuarios.ID_Usuario %>" method="POST" class="form-group container-fluid mb-0">
                                    <div class="form-group row mb-0">
                                        <div class="form-group mx-auto mb-0">
                                            <label for="ID_Usuario">ID Usuario</label>
                                            <input type="number" name="ID_Usuario" id="ID_Usuario" value="<%= usuarios.ID_Usuario %>" class="form-control" disabled>
                                        </div>
                                        <div class="form-group mx-auto mb-0">
                                            <label for="Rol"> Rol del Usario</label>
                                            <input type="text" value="<%= usuarios.Rol %>" class="form-control" name="Rol" required="true">
                                        </div>
                                    </div>

                                    <div class="modal-footer">
                                        <a href="/usuarios_sistema" class="btn btn-danger " data-dismiss="modal">Cancelar</a>
                                        <button type="submit" class="btn btn-primary">Actualizar</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <% } %>

                        <!-- SWEET ALERT -->
                        <%- include("../elements/sweetalert2") -%>

    </body>

    </html>