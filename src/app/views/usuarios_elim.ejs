<%- include("../views/head_html") -%>

    <body>

        <% if(usuarios) { %>
            <div class="card-body col-lg-5 col-md-5 mx-auto" role="document">
                <div class="py-1 container-fluid">
                    <div class="card ">
                        <div class="card-header sm">
                            <h5 class="modal-title text-center text-danger " id="DELETE_ENTRADA" name="DELETE_ENTRADA">ALVERTENCIA</h5>
                            <a href="/usuarios_sistema" type="button" class="close">
                                <span aria-hidden="true">&times;</span>
                            </a>
                        </div>
                        <div class="form-group">
                            <input id="ID_Usuarios" value="<%= usuarios.ID_Usuario %> :" hidden>
                        </div>
                        <div class="modal-body text-center">
                            ¿Estás seguro de borrrar el usuario con la
                            <h3>
                                con ID:
                                <%= usuarios.ID_Usuario %>
                                    y Rol:
                                    <%= usuarios.Rol %>
                            </h3>
                            de forma permanente?
                        </div>
                        <div class="modal-footer">
                            <a href="/usuarios_sistema" type="button" class="btn btn-danger">Cancelar</a>
                            <a href="/usuarios_sistema/borrar/enviar/<%= usuarios.ID_Usuario %> :" class="btn btn-primary">Borrar Usuario</a>
                        </div>
                    </div>
                </div>
            </div>

            <% } %>

                <% if(typeof alert != "undefined") {%>
                    <script>
                        Swal.fire({
                            title: '<%= alertTitle %>',
                            text: '<%= alertMessage %>',
                            icon: '<%= alertIcon %>',
                            showConfirmButton: '<%= showConfirmButton %>',
                            timer: false
                        }).then(() => {
                            window.location = '/<%=ruta %>'
                        })
                    </script>
                    <% } %>
    </body>

    </html>