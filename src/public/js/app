var Formulario_Pedidos = document.getElementById("Formulario-Pedidos");
Formulario_Pedidos.addEventListener("submit", function(e) {
    e.preventDefault();
    console.log("Enviado");

    let datos = new FormData(Formulario_Pedidos);
    console.log(datos.get("Nombre-Cliente"));


});

function getDatos() {

    //1. entradas del cliente
    let Nombre_Cliente = document.getElementById("Nombre-Cliente").value;
    let Apellidos = document.getElementById("Apellidos").value;
    let Cedula = document.getElementById("Cedula").value;
    let Correo_Cliente = document.getElementById("Correo-Cliente").value;
    let Ciudad = document.getElementById("Ciudad").value;
    let Direccion = document.getElementById("Direccion").value;

    //datos del cliente
    let Datos_Cliente = [Nombre_Cliente, Apellidos, Cedula, Correo_Cliente, Ciudad, Direccion];
    console.log(Datos_Cliente);

    //2. entradas del Pedido
    let fecha_pedido = document.getElementById("fecha-pedido").value;
    let fecha_entrega = document.getElementById("fecha-entrega").value;

    //PS=PASTEL RELLENO SENSILLO
    let Guayaba = "PS-Guay: " + document.getElementById("Guayaba").value;
    let Arequipe = "PS-Areq: " + document.getElementById("Arequipe").value;
    let Queso = "PS-Ques: " + document.getElementById("Queso").value;

    //PD=PASTEL RELLENO DOBLE
    let Guayaba_Queso = "PD-Guay/Ques: " + document.getElementById("Guayaba-Queso").value;
    let Arequipe_Queso = "PD-Areq/Ques: " + document.getElementById("Arequipe-Queso").value;
    let Tres_Quesos = "PD-3Ques: " + document.getElementById("Tres-Quesos").value;

    let Pan_Queso = "Pan-Ques: " + document.getElementById("Pan-Queso").value;
    let Pan_Integral = "Pan-Int: " + document.getElementById("Pan-Integral").value;

    //Datos del Pedido
    let Pedido = [fecha_pedido, fecha_entrega, Guayaba, Arequipe, Queso, Guayaba_Queso, Arequipe_Queso, Tres_Quesos, Pan_Queso, Pan_Integral];
    console.log(Pedido);
}